<div class="container">
 <%= render 'shared/side_nav' %>
 <h2><%= @shop.name %> のイベント一覧</h2>
<h3><%= link_to '＋新しいイベントを追加する', new_shop_event_path(@shop) %></h3>
 <% if @events.any? %>
  <ul>
    <% @events.each do |event| %>
      <li>
        <strong>開始日時:</strong> <%= event.opened_at %><p>～</p><strong>終了日時:</strong> <%= event.closed_at %><br>
        <strong>場所:</strong> <%= event.location_id %><p>,</p><strong>住所:</strong> <%= event.address %><br>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>イベントは登録されていません</p>
<% end %>
</div>
