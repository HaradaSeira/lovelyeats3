<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/side_nav' %>
    </div>
    <div class="col-md-9 right-contents">
      <h2><%= @event.shop.name %>の<%= @event.opened_at.strftime('%Y年%-m月%-d日（%A）') %>のイベント</h2>

      <%= form_for @event, url: shop_event_path(@event.shop, @event), method: :patch, html: { class: 'form' } do |f| %>
        <div class="card-body">
          <div class="form-group">
            <strong>キャンパス</strong><br>
            <%= f.collection_select :location_id, Location.all, :id, :name, {}, { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <strong>場所</strong><br>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group">
            <strong>開店時間</strong><br>
            <%= f.datetime_local_field :opened_at, class: "form-control" %>
          </div>
          <div class="form-group">
            <strong>閉店時間</strong><br>
            <%= f.datetime_local_field :closed_at, class: "form-control" %>
          </div>
        </div>
        <div class="card-footer">
          <%= f.submit "更新", class: "btn btn-primary" %>
          <%= link_to '戻る', user_dashboard_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
