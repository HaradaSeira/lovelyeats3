<div class="container">
  <%= render 'shared/side_nav' %>
  <div class="right-contents">
    <h2>新規イベント登録</h2>

    <%= form_with(model: @event, url: shop_events_path(current_user), method: :post) do |form| %>
      <div class="form-group">
        <%= form.label :opened_at, 'イベント開始日時' %>
        <%= form.datetime_local_field :opened_at, class: 'form-control' %>
        <!-- エラーメッセージの表示 -->
        <% if @event.errors[:opened_at].any? %>
          <div class="text-danger">
            <%= @event.errors[:opened_at].join(', ') %>
          </div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.label :closed_at, 'イベント終了日時' %>
        <%= form.datetime_local_field :closed_at, class: 'form-control' %>
        <!-- エラーメッセージの表示 -->
        <% if @event.errors[:closed_at].any? %>
          <div class="text-danger">
            <%= @event.errors[:closed_at].join(', ') %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :location_id, 'キャンパス' %>
        <%= form.collection_select :location_id, @locations, :id, :name, { prompt: '出店するキャンパスを選ぶ' }, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :address, '場所（例：「本部棟2階エントランス」など）' %>
        <%= form.text_area :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :shop_id, 'Shop' %>
        <%= form.collection_select :shop_id, Shop.all, :id, :name, { prompt: 'ショップを選択' }, class: 'form-control' %>
      </div>

      <%= form.submit '登録する', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
