<div class="container">
  <%= render 'shared/side_nav' %>
  <div class="right-contents"> 
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h2><%= @event.shop.name %>の<%= I18n.with_locale(:ja) { @event.opened_at.strftime('%Y年%-m月%-d日（%a）') } %>のイベント</h2>
          </div>
          <div class="card-body">
            <p><strong>おみせのせつめい:</strong> <%= @event.shop.description %></p>
            <p><strong>キャンパス:</strong> <%= @event.location.name %></p>
            <p><strong>場所:</strong> <%= @event.address %></p>
            <p><strong>開店時間:</strong> <%= @event.opened_at.strftime('%-H時%M分') %></p>
            <p><strong>閉店時間:</strong> <%= @event.closed_at.strftime('%-H時%M分') %></p>

            <p><strong>提供されるメニュー:</strong></p>
            <ul>
              <% @event_items.each do |item| %>
                <li><%= item.name %></li>
              <% end %>
            </ul>
  
            <% if @event.shop.image.present? %>
              <div class="shop-image">
                <%= image_tag @event.shop.image.url, class: "img-thumbnail" %>
              </div>
            <% else %>
              <div class="shop-image">
                <%= image_tag 'store.jpg', alt: 'デフォルト画像', class: "img-thumbnail" %>
              </div>
            <% end %>
          </div>
          
          <div class="card-footer">
            <%= link_to '戻る', user_dashboard_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
