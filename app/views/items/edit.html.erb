<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/side_nav' %>
    </div>
    <div class="col-md-9 right-contents">
      <h2><%= @item.name %> の確認・編集・削除</h2>
      
        <%= form_for @item, url: item_path(@item), method: :patch, html: { class: 'form' } do |f| %>
        <div class="form-group">
          <strong>メニューのなまえ</strong><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <strong>メニューの説明</strong><br>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <strong>価格</strong><br>
          <%= f.number_field :price, class: 'form-control' %>
        </div>
        <div class="form-group">
          <strong>メニューの写真</strong><br>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        
        <%= f.submit 'メニュー情報を更新する', class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'このメニューを削除する', item_path(@item), data: {turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>

    </div>
  </div>
</div>
       
  <center>
    <%= link_to '戻る', user_dashboard_path, class: 'btn btn-secondary' %>
  </center>
</div>
