<div class="container">
  <%= render 'shared/side_nav' %>
  <div class="right-contents">
    <h2><%= current_user.email %> さんのメニュー登録</h2>

    <%= form_with(model: @item, url: items_path, method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'メニュー名' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'メニューの説明' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price, '価格（円）' %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, 'メニュー写真' %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :shop_id, 'ショップ' %>
    <%= form.select :shop_id, current_user.shops.map { |shop| [shop.name, shop.id] }, {}, class: 'form-control' %>
  </div>

      <%= form.submit '登録する', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
