<h2>新規おみせ登録</h2>

<%= form_with(model: @shop, url: user_shop_new_user_path, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :image %>
  <%= form.file_field :image %>

  <%= form.submit '登録する' %>
<% end %>