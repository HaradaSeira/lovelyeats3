<div class="container">
 <%= render 'shared/side_nav' %><center>
  <h2><%= @shop.name %> の確認・編集</h2>
  <%= form_for @shop, url: shop_path(@shop), method: :patch do |f| %>
    <p><strong>おみせのなまえ</strong><br><%= f.text_field :name %></p>
    <p><strong>おみせの説明</strong><br><%= f.text_area :description %></p>
    <p><strong>おみせのアイコン</strong></p>
    <div class="shop-img">
      <% if @shop.image.present? %>
        <%= image_tag @shop.image.url, class: "shop-img" %>
      <% else %>
        <%= image_tag 'store.jpg', alt: 'デフォルト画像', class: "shop-img" %>
      <% end %>
      <%= f.file_field :image %>
    </div>
    <%= f.submit 'おみせ情報を更新する' %>
  <% end %>
 
  <%= link_to 'このおみせを削除する', shop_path(@shop), method: :delete %>
 
  <%= render 'events/index' %> <!-- イベント一覧を表示 -->
 
  <%= link_to '戻る', user_dashboard_path %>
</center>
</div>